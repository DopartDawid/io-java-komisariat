<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.komisariat.BusinessObjects">
    <class name = "PatrolRegion" table = "PatrolRegions">

        <meta attribute = "class-description">
            This class contains the Patrol Region detail.
        </meta>

        <id name = "RegionID" type = "int" column = "ID">
            <generator class="native"/>
        </id>

        <property name = "capacity" column = "Capacity" type = "int"/>
        <property name = "dangerLevel" column = "Danger_level" type = "int"/>

    </class>
</hibernate-mapping>