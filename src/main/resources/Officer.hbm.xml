<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.komisariat.BusinessObjects">
    <class name = "Officer" table = "Police_officers">

        <meta attribute = "class-description">
            This class contains the Headquarters detail.
        </meta>

        <id name = "badgeNumber" type = "int" column = "Badge_Number">
            <generator class="native"/>
        </id>

        <property name = "firstName" column = "First_Name" type = "string"/>
        <property name = "lastName" column = "Second_Name" type = "string"/>
        <property name = "rank" column = "Rank_title" type = "string"/>

    </class>
</hibernate-mapping>