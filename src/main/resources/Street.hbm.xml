<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.komisariat.BusinessObjects">
    <class name = "Street" table = "Streets">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "ID">
            <generator class="native"/>
        </id>

        <property name = "streetName" column = "Street_Name" type = "string"/>
        <property name = "firstNumber" column = "First_Num" type = "int"/>
        <property name = "lastNumber" column = "Last_Num" type = "int"/>

    </class>
</hibernate-mapping>