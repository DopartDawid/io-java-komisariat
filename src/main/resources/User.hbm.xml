<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.komisariat.BusinessObjects">
    <class name = "User" table = "Users">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "ID">
            <generator class="native"/>
        </id>

        <property name = "login" column = "Login" type = "string"/>
        <property name = "passHash" column = "Pass_Hash" type = "string"/>
        <property name="accessLevel" column="Access_level">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.komisariat.BusinessObjects.AccessLevel</param>
                <param name="useNamed">true</param>
            </type>
        </property>

    </class>
</hibernate-mapping>