<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.komisariat.BusinessObjects">
    <class name = "Vehicle" table = "Vehicles">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "VIN" type = "string" column = "VIN">
            <generator class="native"/>
        </id>

        <property name = "manufacturer" column = "Manufacturer" type = "string"/>
        <property name = "model" column = "Model" type = "string"/>
        <property name = "productionYear" column = "Production_Year" type = "int"/>
        <property name = "mileage" column = "Mileage" type = "int"/>

    </class>
</hibernate-mapping>